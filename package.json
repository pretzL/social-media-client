{
  "name": "css-frameworks-ca",
  "version": "1.5.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test-u": "npm run test-unit",
    "test-e": "npm run test-e2e",
    "test-e2e": "cypress open",
    "test-unit": "jest",
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w src/**/*.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install",
    "dev": "vite",
    "vite-build": "vite build",
    "vite-preview": "vite preview"
  },
  "jest": {
    "resetMocks": false,
    "setupFiles": [
      "jest-localstorage-mock"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "cypress": "^10.11.0",
    "eslint": "^8.26.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-jest": "^27.1.3",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-localstorage-mock": "^2.4.22",
    "lint-staged": "^13.0.3",
    "live-server": "^1.2.2",
    "prettier": "^2.7.1",
    "sass": "^1.54.8",
    "vite": "^3.2.2"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests --coverage"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  }
